{
  "manifest_version": 3,
  "name": "Recorder",
  "version": "1.0",
  "description": "A Chrome extension for screen and audio recording",
  "permissions": [
    "desktopCapture", 
    "tabCapture", 
    "activeTab", 
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Recorder"
  }
}
